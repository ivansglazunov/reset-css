@import "nib"

html, body
    font-family monospace

body, u, tt, var, table, td, th, tr, select, q, b, strong, p, div, pre, meter, marquee, mark, ul, ol, li, form, fieldset, legend, a, abbr, acronym, address, article, aside, details, figcaption, figure, footer, header, hgroup, main, menu, nav, section, summary, audio, video, progress, canvas, object, embed, blockquote, button, cite, em, samp, code, dl, dt, dd, details, dfn
    margin 0
    padding 0
    outline none
    font-family inherit
    font-style inherit
    background-color transparent
    border-color transparent
    border-width 0
    border-collapse 0
    border-spacing 0
    list-style none
    appearance none

a
    color inherit
    text-decoration none

address, article, aside, details, figcaption, figure, footer, header, hgroup, main, menu, nav, section, summary, audio, video, progress, canvas, object, embed, code, samp, div, pre
    display block

b, string
    font-style bold
i
    font-style italic

audio, video, canvas, object, embed, meter, progress
    width 0
    height 0

audio, video, progress, canvas, object
    vertical-align baseline

button
    cursor pointer
    &:disabled
        cursor default

comment
    display none

details
    summary
        cursor pointer
        &::-webkit-details-marker
            display none
    &:not([open]) >
        display none
    &[open] >
        display block

del, s, strike
    text-decoration line-through

dfn:first-child
    font-style italic